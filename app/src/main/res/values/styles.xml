<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_blue.colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_blue.colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_blue.colorAccent</item>
        <item name="android:windowBackground">@color/dark_blue.background</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dark_color.Theme.TextAppearance.Light.Toolbar.Title" parent="AppTheme.Toolbar">
        <item name="android:textColor">@color/dark_blue.colorAccent</item>
    </style>

</resources>
